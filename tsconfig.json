{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true // TS compiler used only for type checking
  },
  "include": [
    "src/**/*",
    "plugins/**/*",
    "gatsby.d.ts"
  ]
}
